{
  "compilerOptions": {
    // Environment setup
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",

    // --- Library Essentials ---
    "outDir":"./dist",
    "rootDir":"./src",
    "declaration":true,// <-- Must be set to true
    "declarationDir":"./dist/types", // Optional but helpful for organization
    // --------------

    // Best practices
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitOverride": true,
  },
  "include":["src/**/*"],
  "exclude":["node_modules","dist","test"]
}
